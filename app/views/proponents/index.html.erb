<div class="mb-3">
  <div class="d-flex justify-content-between">
    <h2>
      Funcionários
    </h2>

    <div>
      <%= link_to 'Novo Funcionário', new_proponent_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<% unless @proponents.empty? %>
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">CPF</th>
        <th scope="col">Data de Nascimento</th>
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% @proponents.each do |proponent| %>
        <tr>
          <td><%= proponent.name %></td>
          <td><%= proponent.cpf %></td>
          <td><%= proponent.birthdate %></td>
          <td>
            <div class="dropdown text-center">
              <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Ações
              </button>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Acessar', proponent, class: 'dropdown-item' %>
                </li>

                <li>
                  <%= link_to 'Editar', edit_proponent_path(proponent), class: 'dropdown-item' %>
                </li>

                <li>
                  <%= link_to 'Remover', proponent, data: { turbo_method: :delete }, class: 'dropdown-item' %>
                </li>
              </ul>
            </div>
            <ul>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @proponents.empty? %>
  <tfoot>
    <tr>
      <td colspan="5">
        <div class="alert alert-primary text-center">
          <span>
            Nenhum proponente encontrado
          </span>
        </div>
      </td>
    </tr>
  </tfoot>
<% end %>
