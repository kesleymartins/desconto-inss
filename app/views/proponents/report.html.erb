<div class="mb-3">
  <div class="d-flex justify-content-between">
    <h2>
      Relatório
    </h2>

    <div>
      <%= link_to 'Voltar', proponents_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>
</div>

<div class="card mb-3">
  <div class="card-body">
    <%= bar_chart @data, xtitle: "Total", ytitle: "Faixa Salarial" %>
  </div>
</div>

<% if @data.any? %>
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th scope="col">
          Faixa Salarial
        </th>

        <th scope="col">
          Total
        </th>
      </tr>
    </thead>

    <tbody>
      <% @data.each do |row| %>
        <tr>
          <td>
            <%= row[0] %>
          </td>
          <td>
            <%= row[1] %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @data.empty? %>
  <div class="alert alert-primary text-center">
    <span>
      Nenhum funcionário encontrado
    </span>
  </div>
<% end %>
